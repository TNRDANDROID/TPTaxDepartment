<resources>

    <!-- Base application theme. -->

    <!--<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />-->
    <!-- Base PMAYSurveyapplication theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
         <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
       <!-- <item name="statusBarBackground">@drawable/gradiant_bg</item>
        <item name="android:statusBarColor">@color/full_transparent</item>-->

       <!-- <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:fitsSystemWindows">true</item>
    </style>
    <style name="spinnerTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
         <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="font_circular_book">
        <item name="android:fontFamily">@string/font_circular_book</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_circular_bold">
        <item name="android:fontFamily">@string/font_circular_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="font_poppins_semibold">
        <item name="android:fontFamily">@string/font_poppins_semibold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_poppins_regular">
        <item name="android:fontFamily">@string/font_poppins_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_poppins_medium">
        <item name="android:fontFamily">@string/font_poppins_medium</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_poppins_light">
        <item name="android:fontFamily">@string/font_poppins_light</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="font_poppins_bold">
        <item name="android:fontFamily">@string/font_poppins_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_circular_medium">
        <item name="android:fontFamily">@string/font_circular_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_down</item>
    </style>

    <style name="DialogSlideAnim" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>


    <style name="TextInputTheme" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/grey2</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/grey2</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--<item name="textColorError">@color/design_textinput_error_color_light</item>-->
    </style>
    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/subscription_type_red_color</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">12sp</item>
    </style>


</resources>
