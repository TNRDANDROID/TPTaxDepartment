<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cornered_border_bg"
    android:layout_margin="5dp"
    android:elevation="@dimen/_6sdp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:id="@+id/nameValue"
            android:background="@drawable/new_round_cornered_bg"
            android:text="Trader Name"
            android:fontFamily="sans-serif" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/content2"
        android:layout_below="@+id/content1"
        android:padding="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="3dp"
            android:id="@+id/rel1">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@color/border_line"
            android:id="@+id/code"
            android:text="Code"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/codec"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@color/border_line"
            android:layout_toRightOf="@+id/paymentDate"
            android:fontFamily="sans-serif"
            android:text=" : "
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.3"
            android:layout_height="match_parent"
            android:gravity="start"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/border_line"
            android:layout_toRightOf="@+id/codec"
            android:id="@+id/codeValue"
            android:text="Trader code "
            android:fontFamily="sans-serif" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="3dp"
            android:layout_below="@+id/rel1"
            android:id="@+id/rel2">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/border_line"
            android:id="@+id/mobile"
            android:layout_below="@+id/code"
            android:text="Mobile"
            android:fontFamily="sans-serif" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@color/border_line"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/paymentDate"
            android:layout_below="@+id/code"
            android:id="@+id/mobilec"
            android:text=" : "
            android:fontFamily="sans-serif" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.9"
            android:layout_height="match_parent"
            android:gravity="start"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/border_line"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/mobilec"
            android:layout_below="@+id/code"
            android:id="@+id/mobileValue"
            android:text="Mobile No"
            android:fontFamily="sans-serif" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:padding="3dp"
            android:layout_below="@+id/rel2"
            android:id="@+id/rel3">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@color/border_line"
            android:layout_marginTop="5dp"
            android:id="@+id/paymentDate"
            android:layout_below="@+id/mobile"
            android:text="PaymentDate"
            android:fontFamily="sans-serif" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            android:gravity="start"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/border_line"
            android:layout_toRightOf="@+id/paymentDate"
            android:layout_below="@+id/mobile"
            android:id="@+id/paymentdatec"
            android:text=" : "
            android:fontFamily="sans-serif" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.9"
            android:layout_height="match_parent"
            android:gravity="start"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/border_line"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/paymentdatec"
            android:layout_below="@+id/mobile"
            android:id="@+id/paymentDateValue"
            android:text="paymentDate"
            android:fontFamily="sans-serif" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="70dp"
            android:id="@+id/paymentStatus"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_green_bg"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:text="UnPaid" />

    </RelativeLayout>
</RelativeLayout>

