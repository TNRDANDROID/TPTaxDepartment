<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.nic.TPTaxDepartment.activity.ExistingTradeList" />
    </data>

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"

        android:layout_height="match_parent"


        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/gradiant_bg">

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="start"
                android:layout_centerVertical="true"
                android:onClick="@{()-> activity.onBackPressed()}"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/back"
                android:backgroundTint="@android:color/white" />


            <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Existing Traders"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/log_out"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:adjustViewBounds="true"
                android:onClick="@{()-> activity.dashboard()}"
                android:background="@drawable/ic_home_black_24dp"
                android:backgroundTint="@android:color/white"
                android:scaleType="centerInside" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/transparent_black_hex_1"
            android:layout_below="@+id/header_layout"
            android:gravity="center">


            <RelativeLayout
                android:id="@+id/road_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="30dp"
                android:gravity="center">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/trade_recycler"
                    android:scrollbarSize="1dp"
                    android:padding="@dimen/margin_left_20dp"
                    android:visibility="visible"
                    android:scrollbars="vertical"/>


            </RelativeLayout>
            <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/no_data_found_layout">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="150dp"
                    android:src="@drawable/no_data_ic"
                    android:scaleType="centerCrop"
                    android:id="@+id/no_data_img"></ImageView>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Data Found"
                    android:layout_below="@+id/no_data_img"
                    android:layout_centerHorizontal="true"></TextView>
            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/circle1"
            android:visibility="gone"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_125sdp"
            android:layout_marginRight="-100dp"
            android:src="@drawable/circletransparant" />

        <ImageView
            android:id="@+id/circle2"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-100dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/circletransparant" />

        <ImageView
            android:id="@+id/circle3"
            android:layout_width="162dp"
            android:layout_height="162dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-80dp"
            android:layout_marginBottom="-30dp"
            android:src="@drawable/circle" />

        <ImageView
            android:id="@+id/circle4"
            android:layout_width="124dp"
            android:layout_height="124dp"
            android:visibility="gone"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="-50dp"
            android:layout_marginBottom="-50dp"
            android:layout_toLeftOf="@+id/circle3"
            android:src="@drawable/circletransparant" />


    </RelativeLayout>


</layout>