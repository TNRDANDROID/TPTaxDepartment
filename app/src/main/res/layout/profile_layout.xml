<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/waterTax"
        android:background="@drawable/bg_rectangle"
        android:padding="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:text="Name : "
                android:textColor="@color/grey1"
                android:visibility="visible" />
            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:text="Connection No"
                android:textColor="@color/grey2"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@color/light_grey"
                android:layout_margin="5dp"></View>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:text="District : "
                android:textColor="@color/grey1"
                android:visibility="visible" />
            <TextView
                android:id="@+id/District"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:text="Connection Name"
                android:textColor="@color/grey2"
                android:visibility="visible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:visibility="gone"
                android:background="@color/light_grey"
                android:layout_margin="5dp"></View>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:text="Town Panchayat : "
                android:textColor="@color/grey1"
                android:visibility="visible" />
            <TextView
                android:id="@+id/Town"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:text="Water Charges"
                android:textColor="@color/grey2"
                android:visibility="visible" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:text="Role : "
                android:textColor="@color/grey1"
                android:visibility="visible" />
            <TextView
                android:id="@+id/Role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:text="Water Charges"
                android:textColor="@color/grey2"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>