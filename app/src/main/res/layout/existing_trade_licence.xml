<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customfontdemo="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.nic.TPTaxDepartment.activity.ExistingTradeLicence" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout


        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:elevation="0dp"
            android:translationZ="0.1dp"
            android:background="@android:color/transparent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <RelativeLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/header_login">


                    <ImageView
                        android:id="@+id/refresh"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back"
                        android:backgroundTint="@android:color/white"
                        android:onClick="@{()-> activity.onBackPressed()}" />


                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="@string/existing_Trade_Licence"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/log_out"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/ic_home_black_24dp"
                        android:backgroundTint="@android:color/white"
                        android:onClick="@{()-> activity.dashboard()}"
                        android:scaleType="centerInside" />


                </RelativeLayout>

                <View
                    android:id="@+id/horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/header_layout"
                    android:background="#FFF" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/circle1"
                    android:layout_width="134dp"
                    android:layout_height="134dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_125sdp"
                    android:layout_marginRight="-100dp"
                    android:src="@drawable/circletransparant" />

                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="134dp"
                    android:layout_height="134dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/circletransparant" />

                <ImageView
                    android:id="@+id/circle3"
                    android:layout_width="162dp"
                    android:layout_height="162dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="-80dp"
                    android:layout_marginBottom="-30dp"
                    android:src="@drawable/circle" />

                <ImageView
                    android:id="@+id/circle4"
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="-50dp"
                    android:layout_marginBottom="-50dp"
                    android:layout_toLeftOf="@+id/circle3"
                    android:src="@drawable/circletransparant" />

            </RelativeLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/traders_code_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="@string/trade_Code"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/header"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:background="@drawable/rectangle_box"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"


                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible"
                                customfontdemo:fontName="@string/font_circular_book" />

                            <Spinner
                                android:id="@+id/trade_code_spinner"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:hint="Traders Code">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/traders_code"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </RelativeLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="@string/or"
                        android:textColor="@color/dashboard_line_dark"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible" />


                    <LinearLayout
                        android:id="@+id/mobile_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/gender_layout"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mobile_hint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="@string/mobile_No"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_medium" />


                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:hint="Mobile No">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/mobile_no"
                                    android:maxLength="10"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_20dp"
                        android:layout_marginTop="@dimen/padding"
                        android:layout_marginRight="@dimen/margin_left_20dp"
                        android:text="@string/or"
                        android:textColor="@color/dashboard_line_dark"
                        android:textSize="@dimen/_15sdp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/ward_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mobile_layout"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="@string/ward_No"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_medium" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/header"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:background="@drawable/rectangle_box"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"


                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible"
                                customfontdemo:fontName="@string/font_circular_book" />

                            <Spinner
                                android:id="@+id/ward_no"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/streets_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ward_layout"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="@string/street_Name"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_medium" />


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/header"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:background="@drawable/rectangle_box"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"


                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible"
                                customfontdemo:fontName="@string/font_circular_book" />

                            <Spinner
                                android:id="@+id/streets_name"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentEnd="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:gravity="center" />

                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_register"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:background="@drawable/click_here"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="@string/submit"
                        android:onClick="@{()-> activity.validateDetails()}"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp" />
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_clear"
                        android:layout_toRightOf="@+id/btn_register"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:background="@drawable/click_here"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:text="@string/clear"
                        android:onClick="@{()-> activity.clearDetails()}"
                        android:textAllCaps="false"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_15sdp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>
</layout>