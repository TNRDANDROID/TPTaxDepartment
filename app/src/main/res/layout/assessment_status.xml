<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:customfontdemo="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="com.nic.TPTaxDepartment.activity.AssessmentStatus" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout


        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways|snap">

                <RelativeLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/header_login">


                    <ImageView
                        android:id="@+id/refresh"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentStart="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="start"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/back"
                        android:backgroundTint="@android:color/white"
                        android:onClick="@{()-> activity.onBackPressed()}" />


                    <TextView
                        android:id="@+id/title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="Assessment Status"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/log_out"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/ic_home_black_24dp"
                        android:backgroundTint="@android:color/white"
                        android:onClick="@{()-> activity.dashboard()}"
                        android:scaleType="centerInside" />


                </RelativeLayout>

                <View
                    android:id="@+id/horizontal_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/header_layout"
                    android:background="#FFF" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/circle1"
                    android:layout_width="134dp"
                    android:layout_height="134dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_125sdp"
                    android:layout_marginRight="-100dp"
                    android:src="@drawable/circletransparant" />

                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="134dp"
                    android:layout_height="134dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="-100dp"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/circletransparant" />

                <ImageView
                    android:id="@+id/circle3"
                    android:layout_width="162dp"
                    android:layout_height="162dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="-80dp"
                    android:layout_marginBottom="-30dp"
                    android:src="@drawable/circle" />

                <ImageView
                    android:id="@+id/circle4"
                    android:layout_width="124dp"
                    android:layout_height="124dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="-50dp"
                    android:layout_marginBottom="-50dp"
                    android:layout_toLeftOf="@+id/circle3"
                    android:src="@drawable/circletransparant" />

            </RelativeLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/licence_type_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="Tax Type"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_medium" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/header"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:background="@drawable/rectangle_box"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"


                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible"
                                customfontdemo:fontName="@string/font_circular_book" />


                            <Spinner
                                android:elevation="@dimen/_6sdp"
                                android:textAlignment="center"
                                android:popupBackground="@drawable/assessment_status_details_view"
                                android:id="@+id/tax_type"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:gravity="center" />

                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="Assessment Id"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:orientation="vertical">

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:hint="Assessment Id">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/assessment_id"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textPersonName" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/applicant_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_layout"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="Applicant Name"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_medium" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/header"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:background="@drawable/rectangle_box"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/applicant_name_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/margin_left_20dp"
                                android:layout_marginRight="@dimen/margin_left_20dp"
                                android:text=""

                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible"
                                customfontdemo:fontName="@string/font_circular_book" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/father_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="Father Name"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_medium" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/header"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:background="@drawable/rectangle_box"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/father_name_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible"
                                customfontdemo:fontName="@string/font_circular_book" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/address_details_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="Permenent Address"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_medium" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/header"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:background="@drawable/rectangle_box"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/address_details__text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible"
                                customfontdemo:fontName="@string/font_circular_book" />


                        </RelativeLayout>


                    </LinearLayout>

                    <LinearLayout

                        android:id="@+id/details_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name_layout"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:text="Details"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_15sdp"
                            android:visibility="visible"
                            customfontdemo:fontName="@string/font_circular_medium" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/header"
                            android:layout_marginLeft="@dimen/margin_left_20dp"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginRight="@dimen/margin_left_20dp"
                            android:background="@drawable/rectangle_box"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <TextView
                                android:id="@+id/details_tv"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="@dimen/margin_left_20dp"
                                android:layout_marginRight="@dimen/margin_left_20dp"
                                android:text=""

                                android:textColor="@android:color/black"
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible"
                                customfontdemo:fontName="@string/font_circular_book" />


                        </RelativeLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:background="#7283E6"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content">

                        <RelativeLayout

                            android:layout_margin="@dimen/_20sdp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/profile_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_headset"
                                android:layout_centerVertical="true"
                                android:id="@+id/app_profile">
                            </de.hdodenhof.circleimageview.CircleImageView>

                            <TextView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/app_profile"
                                android:layout_centerVertical="true"
                                android:text="Dileep"
                                android:textColor="@color/black">

                            </TextView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/father_details_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/profile_rl">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:id="@+id/father_name"
                            android:text="Father's Name"
                           ></TextView>

                        <TextView
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:id="@+id/father_name1"
                            android:text="Father's Name"
                            android:layout_toEndOf="@+id/father_name">

                        </TextView>
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/appinfo_details_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/profile_rl">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:id="@+id/app_name_text_name"
                                android:text="Father's Name"
                                ></TextView>

                            <TextView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:id="@+id/father1_name1"
                                android:text="Father's Name"
                                android:layout_toEndOf="@+id/app_name_text_name">

                            </TextView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/permenent_address_details_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/appinfo_details_rl">

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:id="@+id/app_address_text_name"
                                android:text="Father's Name"
                                ></TextView>

                            <TextView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:id="@+id/father2_name2"
                                android:text="Father's Name"
                                android:layout_toEndOf="@+id/app_address_text_name">

                            </TextView>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_marginTop="@dimen/_10sdp"
                            android:id="@+id/size_of_place_details_rl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/permenent_address_details_rl">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:id="@+id/size_of_text_name"
                                android:text="Place Details"
                                ></TextView>

                            <TextView
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:id="@+id/father3_name3"
                                android:text="Father's Name"
                                android:layout_toEndOf="@+id/size_of_text_name">

                            </TextView>
                        </RelativeLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>