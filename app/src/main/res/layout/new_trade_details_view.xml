<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
        android:id="@+id/trader_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_20dp"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginRight="@dimen/margin_left_20dp"
            android:text="Trader Name"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_15sdp"
            android:visibility="visible" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_20dp"
            android:layout_marginTop="@dimen/padding"
            android:layout_marginRight="@dimen/margin_left_20dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:hint="Trader Name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/trader_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName" />

            </com.google.android.material.textfield.TextInputLayout>

        </RelativeLayout>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/local_panchayat_code_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:text="Local Panchayath Code"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15sdp"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Local Panchayath Code">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/local_panchayat_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/traders_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:text="Traders Type"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15sdp"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Traders Type">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/traders_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/door_no_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:text="Door Number"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15sdp"
                android:visibility="visible" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_20dp"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/margin_left_20dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="Door Number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/door_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName" />

                </com.google.android.material.textfield.TextInputLayout>

            </RelativeLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>